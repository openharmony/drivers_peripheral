  if (enable_audio_mpi_so) {
    defines += [ "AUDIO_MPI_SO" ]
  }
  if (enable_audio_adm_service) {
    defines += [ "AUDIO_ADM_SERVICE" ]
  }
  if (enable_audio_mpi_service) {
    defines += [ "AUDIO_MPI_SERVICE" ]
  }
}
