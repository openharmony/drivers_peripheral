INPUT_ROOT_DIR = "./../.."

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")
} else {
  import("//build/ohos.gni")
  import("//build/test.gni")
}

if (defined(ohos_lite)) {
  unittest("hdf_peripheral_input_test") {
    output_extension = "bin"
    output_dir = "$root_out_dir/test/unittest/hdf"
    include_dirs = [
      "//third_party/googletest/googletest/include",
      "//third_party/bounds_checking_function/include",
      "$INPUT_ROOT_DIR/hal/include",
      "$INPUT_ROOT_DIR/interfaces/include",
      "$INPUT_ROOT_DIR/utils/include",
    ]

    sources = [ "./common/hdi_input_test.cpp" ]
    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]
    if (ohos_build_compiler != "clang") {
      cflags += [
        "-Wno-format",
        "-Wno-format-extra-args",
      ]
    }
    public_deps = [
      "$INPUT_ROOT_DIR/hal:hdi_input",
      "//third_party/bounds_checking_function:libsec_shared",
    ]
    external_deps = [
      "FreeBSD:libfreebsd_input",
      "hdf_core:libhdf_utils",
      "hilog_lite:hilog_shared",
    ]
  }
} else {
  module_output_path = "drivers_peripheral_input/input"
  ohos_unittest("hdf_unittest_input") {
    module_out_path = module_output_path
    include_dirs = [
      "$INPUT_ROOT_DIR/hal/include",
      "$INPUT_ROOT_DIR/interfaces/include",
      "$INPUT_ROOT_DIR/utils/include",
    ]
    sources = [ "./common/hdi_input_test.cpp" ]
    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]

    deps = [ "$INPUT_ROOT_DIR/hal:hdi_input" ]
    if (is_standard_system) {
      external_deps = [
        "c_utils:utils",
        "hdf_core:libhdf_utils",
        "hilog:libhilog",
      ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }
  }
}
