import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "drivers_peripheral_input/input"

ohos_unittest("hid_ddk_unittest") {
  module_out_path = module_output_path

  include_dirs = []

  sources = [ "hid_ddk_test.cpp" ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "c_utils:utils",
    "drivers_interface_input:libhid_ddk_proxy_1.0",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}
