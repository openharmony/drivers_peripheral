{
  "name": "@ohos/drivers_peripheral_light",
  "description": "light device driver",
  "version": "4.0",
  "license": "Apache License 2.0",
  "publishAs": "code-segment",
  "segment": {
    "destPath": "drivers/peripheral/light"
  },
  "dirs": {},
  "scripts": {},
