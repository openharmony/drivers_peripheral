import("//build/ohos.gni")
import("//build/ohos_var.gni")
import("//build/test.gni")
import("../../vibrator.gni")

module_output_path = "drivers_peripheral_vibrator/drivers_peripheral_vibrator"
ohos_benchmarktest("hdf_vibrator_benchmark_test") {
  module_out_path = module_output_path
  include_dirs = []

  sources = [ "hdf_vibrator_benchmark_test.cpp" ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "drivers_interface_vibrator:libvibrator_proxy_1.1",
      "hdf_core:libhdf_utils",
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
    if (c_utils_enable) {
      external_deps += [ "c_utils:utils" ]
    }
  }
  external_deps += [ "googletest:gtest_main" ]
}
