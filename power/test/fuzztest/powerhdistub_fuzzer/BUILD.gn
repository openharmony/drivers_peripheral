import("//build/config/features.gni")
import("//build/test.gni")
import("../../../power.gni")

ohos_fuzztest("PowerHdiStubFuzzTest") {
  module_out_path = "drivers_peripheral_power/drivers_peripheral_power"
  fuzz_config_file = "."
  include_dirs = [
    "../../../interfaces/hdi_service/src",
    "../../../utils/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "powerhdistub_fuzz.cpp" ]
  deps = [ "../../../interfaces/hdi_service:libpower_interface_service_1.2" ]
  external_deps = [
    "drivers_interface_power:libpower_stub_1.2",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
  if (drivers_peripheral_power_c_utils) {
    external_deps += [ "c_utils:utils" ]
  }
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_power"
}

group("hdf_power_stub_fuzztest") {
  testonly = true
  deps = [ ":PowerHdiStubFuzzTest" ]
}
