import("//build/ohos.gni")
import("//build/test.gni")

module_output_path =
    "drivers_peripheral_midi/drivers_peripheral_midi/midi_hdi_unittest"

ohos_unittest("midi_hdi_unittest") {
  module_out_path = module_output_path

  include_dirs = [
    "../../common/include",
    "../../hdi_service/include",
