import("//build/test.gni")

TEST_ROOT_DIR = "../../.."

module_output_path = "drivers_peripheral_wlan/drivers_peripheral_wlan"

ohos_fuzztest("WpaFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "$TEST_ROOT_DIR/test/fuzztest/wpa_fuzzer"

  include_dirs = [
    "$TEST_ROOT_DIR/interfaces/include",
    "$TEST_ROOT_DIR/test/fuzztest",
    "$TEST_ROOT_DIR/wpa/interfaces/hdi_service",
    "$TEST_ROOT_DIR/wpa/interfaces/hdi_service/service_common",
    "./service_common",
    "../../client/include",
  ]

  deps = [ "$TEST_ROOT_DIR/hdi_service:hdi_wlan_service" ]

  defines = [ "__OHOS__USER__" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_wlan:libwlan_proxy_1.3",
    "drivers_interface_wlan:libwpa_proxy_2.0",
    "drivers_interface_wlan:libwpa_stub_2.0",
    "hdf_core:libhdf_host",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hdf_core:libpub_utils",
    "hilog:libhilog",
    "wpa_supplicant:wpa",
    "bounds_checking_function:libsec_shared",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-strict-aliasing",
    "-DCONFIG_CTRL_IFACE",
    "-DCONFIG_WEP",
    "-DCONFIG_WPS",
  ]

  sources = [
    "$TEST_ROOT_DIR/test/fuzztest/wpa_common_fuzzer.cpp",
    "wpa_fuzzer.cpp",
  ]
}

group("wpa_fuzztest") {
  testonly = true
  deps = [ ":WpaFuzzTest" ]
}
