import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_codec/drivers_peripheral_codec"

ohos_fuzztest("CodecHdiFuzzTest") {
  module_out_path = module_output_path
  codec_root = "../../../../"
  fuzz_config_file = "${codec_root}/test/fuzztest/hdi_fuzzer/codechdi_fuzzer"

  include_dirs = [
    "${codec_root}/interfaces/include",
    "${codec_root}/hal/include",
    "${codec_root}/test/fuzztest/hdi_fuzzer/codechdi_fuzzer",
  ]

  sources = [ "codec_fuzzer.cpp" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_codec:libcodec_proxy_3.0",
    "drivers_interface_codec:libcodec_stub_3.0",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hilog:libhilog",
    "ipc:ipc_single",
    "openmax:libopenmax_static",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":CodecHdiFuzzTest" ]
}
