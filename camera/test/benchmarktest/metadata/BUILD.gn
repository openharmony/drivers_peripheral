import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "drivers_peripheral_camera/camera"

ohos_benchmarktest("hdf_camera_vendor_tag_benchmark_test") {
  module_out_path = module_output_path

  include_dirs = []

  sources = [
    "camera_vendor_tag_benchmark_test.cpp",
  ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "drivers_interface_camera:libcamera_vendor_tag_proxy_1.0",
      "googletest:gtest_main",
      "hdf_core:libhdf_utils",
      "hilog:libhilog",
      "ipc:ipc_single",
      "c_utils:utils",
    ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }
  external_deps += [ "ipc:ipc_single" ]
}
